<div class="container">
    <div class="jumbotron">
        <img src="../assets/burger.jpg" class="rounded mx-auto d-block" alt="...">
        <h1>
            <p class="text-center">Eat-Da-Burger!</p>
        </h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-1">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <p class="font-weight-bold">Burgers List</p>
                </div>
                <ul class="list-group">
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <li class="list-group-item">
                        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                            <button id="sizebtn" class="btn btn-success btn-lg btn-block"
                                type="submit">{{this.burger_name}}</button>
                        </form>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <p class="font-weight-bold">Devoured Burgers</p>
                </div>
                <ul class="list-group">
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <li class="list-group-item">
                        {{this.burger_name}}
                    </li>
                    <button id="sizebtn" class="delete-order btn btn-success btn-lg btn-block" data-id="{{this.id}}"
                        type="submit">Delete</button>

                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <p class="font-weight-bold">Add a Burger</p>
            </div>
            <div class="panel-body">
                <p>Enter the name of burger you're craving below!</p>
                <!-- section to add burgers -->
                <form>
                    <div class="form-group">
                        <label for="name">Burger Name: </label>
                        <input type="text" id="burger_name" name="burger_name" placeholder="Impossible Burger">
                        <button id="create-form" class="btn btn-primary btn-sm" type="submit"> submit</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>